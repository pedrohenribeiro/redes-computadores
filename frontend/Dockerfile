FROM node:22-alpine AS build

WORKDIR /app


ARG SERVER_NAME
ENV REACT_APP_SERVER_NAME=$SERVER_NAME
ENV VITE_SERVER_NAME=$SERVER_NAME

COPY package*.json ./
RUN npm install

COPY . .

RUN npm run build

FROM nginx:alpine

COPY --from=build /app/dist /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
